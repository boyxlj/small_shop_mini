         <view class="title">{{item.title}}-{{item.descs}}</view> 
        <!--<view class="title">{{item.title}}</view>-->
        <view class="price"><text>￥{{item.price}}</text><text>￥{{item.prePrice}}</text> </view>
      </view>
  </view>
</view>